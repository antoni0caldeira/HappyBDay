@model ConsultantsListViewModel
@*@model IEnumerable<HappyBDay.Models.Users>*@

@{
    ViewData["Title"] = "Users";
}
<section class="content-section bg-light" id="about">
    <div class="container px-4 px-lg-5 text-center">
        <div class="row gx-4 gx-lg-5 justify-content-center">

            <h1 class="mb-5">Users Off</h1>           
            <div class="row">
                <div class="text-left col-3">
                    <a type="button" class="btn btn-secondary mb-5" asp-action="Register">New User</a>
                </div>
                <div class="text-right col-9">
                    <a type="button" class="btn btn-secondary mb-5" asp-action="Index">Status On</a>
                </div>


                <table class="table">
                    <thead style="color: #0070AC">
                        <tr>
                            <th style="border-top:none">
                                @Html.DisplayNameFor(model => model.Users[0].Username)
                            </th>
                            <th style="border-top:none">
                                @Html.DisplayNameFor(model => model.Users[0].IdProfileNavigation)
                            </th>
                            <th style="border-top:none"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdProfileNavigation.Name)
                                </td>
                                <td>
                                    @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                                    @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                    <a asp-action="Reactivate" asp-route-id="@item.Id" class="btn btn-primary">Reactivate</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
</section>